<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsdm.produce.mapper.ProduceModelMapper">

    <resultMap type="ProduceModel" id="ProduceModelResult">
        <result property="id" column="id"/>
        <result property="modelName" column="model_name"/>
        <result property="modelNumber" column="model_number"/>
        <result property="model" column="model"/>
        <result property="status" column="status" javaType="String" jdbcType="CHAR"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="selectProduceModelVo">
        select id,
               model_name,
               model_number,
               model,
               status,
               create_by,
               create_time,
               update_by,
               update_time
        from pd_produce_model
    </sql>

    <select id="selectProduceModelList" parameterType="ProduceModel" resultMap="ProduceModelResult">
        <include refid="selectProduceModelVo"/>
        <where>
            <if test="modelName != null  and modelName != ''">
                and model_name like concat('%', #{modelName}, '%')
            </if>
            <if test="modelNumber != null  and modelNumber != ''">
                and model_number = #{modelNumber}
            </if>
            <if test="model != null  and model != ''">
                and model = #{model}
            </if>
            <if test="status != null  and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>

    <select id="selectProduceModelById" parameterType="Long" resultMap="ProduceModelResult">
        <include refid="selectProduceModelVo"/>
        where id = #{id}
    </select>

    <select id="selectProduceModelByModel" parameterType="String" resultMap="ProduceModelResult">
        <include refid="selectProduceModelVo"/>
        where model = #{model}
    </select>

    <insert id="insertProduceModel" parameterType="ProduceModel" useGeneratedKeys="true"
            keyProperty="id">
        insert into pd_produce_model
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="modelName != null">model_name,
            </if>
            <if test="modelNumber != null">model_number,
            </if>
            <if test="model != null">model,
            </if>
            <if test="status != null">status,
            </if>
            <if test="createBy != null">create_by,
            </if>
            <if test="createTime != null">create_time,
            </if>
            <if test="updateBy != null">update_by,
            </if>
            <if test="updateTime != null">update_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="modelName != null">#{modelName},
            </if>
            <if test="modelNumber != null">#{modelNumber},
            </if>
            <if test="model != null">#{model},
            </if>
            <if test="status != null">#{status},
            </if>
            <if test="createBy != null">#{createBy},
            </if>
            <if test="createTime != null">#{createTime},
            </if>
            <if test="updateBy != null">#{updateBy},
            </if>
            <if test="updateTime != null">#{updateTime},
            </if>
        </trim>
    </insert>

    <update id="updateProduceModel" parameterType="ProduceModel">
        update pd_produce_model
        <trim prefix="SET" suffixOverrides=",">
            <if test="modelNumber != null">
                model_number = #{modelNumber},
            </if>
            <if test="model != null">
                model = #{model},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </trim>
        where id = #{id}
    </update>

    <update id="deleteProduceModelById" parameterType="Long">
        update pd_produce_model set status = '1'
        where id = #{id}
    </update>

    <update id="deleteProduceModelByIds" parameterType="String">
        update pd_produce_model set status = '1'  where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>
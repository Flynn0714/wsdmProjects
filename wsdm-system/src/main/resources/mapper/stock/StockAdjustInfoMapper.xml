<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsdm.stock.mapper.StockAdjustInfoMapper">

    <resultMap type="StockAdjustInfo" id="StockAdjustInfoResult">
        <result property="id" column="id"/>
        <result property="adjustNumber" column="adjust_number"/>
        <result property="stockCode" column="stock_code"/>
        <result property="stockName" column="stock_name"/>
        <result property="adjustType" column="adjust_type"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="auditTime" column="audit_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="auditBy" column="audit_by"/>
    </resultMap>

    <resultMap type="StockAdjustInfoVo" id="StockAdjustInfoResultVo">
        <result property="id" column="id"/>
        <result property="adjustNumber" column="adjust_number"/>
        <result property="stockCode" column="stock_code"/>
        <result property="stockName" column="stock_name"/>
        <result property="adjustType" column="adjust_type"/>
        <result property="remark" column="remark"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="auditTime" column="audit_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="auditBy" column="audit_by"/>
    </resultMap>

    <sql id="selectStockAdjustInfoVo">
        select
            id,
            adjust_number,
            stock_code,
            stock_name,
            adjust_type,
            remark,
            status,
            create_by,
            create_time,
            audit_time,
            update_by,
            update_time,
            audit_by
        from sk_stock_adjust_info
    </sql>

    <select id="selectStockAdjustInfoList" parameterType="StockAdjustInfo" resultMap="StockAdjustInfoResult">
        <include refid="selectStockAdjustInfoVo"/>
        <where>
            <if test="adjustNumber != null  and adjustNumber != ''">
                and adjust_number = #{adjustNumber}
            </if>
            <if test="stockCode != null  and stockCode != ''">
                and stock_code = #{stockCode}
            </if>
            <if test="stockName != null  and stockName != ''">
                and stock_name like concat('%', #{stockName}, '%')
            </if>
            <if test="adjustType != null  and adjustType != ''">
                and adjust_type = #{adjustType}
            </if>
            <if test="status != null  and status != ''">
                and status = #{status}
            </if>
            <if test="auditTimeStart != null and auditTimeEnd != null">
                and audit_time between #{auditTimeStart} and #{auditTimeEnd}
            </if>
        </where>
    </select>

    <select id="selectStockAdjustInfoById" parameterType="Long" resultMap="StockAdjustInfoResultVo">
        <include refid="selectStockAdjustInfoVo"/>
        where id = #{id}
    </select>

    <select id="selectStockAdjustInfoByIds" parameterType="String" resultMap="StockAdjustInfoResultVo">
        <include refid="selectStockAdjustInfoVo"/>
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <select id="getMaxAdjustCode" parameterType="String" resultType="String">
        SELECT CONCAT(#{code}, max(REPLACE(adjust_number, #{code}, '') + 0)) maxCode
        FROM sk_stock_adjust_info
        WHERE adjust_number REGEXP CONCAT(#{code}
            ,'[0-9]*$')
    </select>

    <insert id="insertStockAdjustInfo" parameterType="StockAdjustInfo" useGeneratedKeys="true"
            keyProperty="id">
        insert into sk_stock_adjust_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="adjustNumber != null">adjust_number,
            </if>
            <if test="stockCode != null">stock_code,
            </if>
            <if test="stockName != null">stock_name,
            </if>
            <if test="adjustType != null">adjust_type,
            </if>
            <if test="remark != null">remark,
            </if>
            <if test="status != null">status,
            </if>
            <if test="createBy != null">create_by,
            </if>
            <if test="createTime != null">create_time,
            </if>
            <if test="auditTime != null">audit_time,
            </if>
            <if test="updateBy != null">update_by,
            </if>
            <if test="updateTime != null">update_time,
            </if>
            <if test="auditBy != null">audit_by,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="adjustNumber != null">#{adjustNumber},
            </if>
            <if test="stockCode != null">#{stockCode},
            </if>
            <if test="stockName != null">#{stockName},
            </if>
            <if test="adjustType != null">#{adjustType},
            </if>
            <if test="remark != null">#{remark},
            </if>
            <if test="status != null">#{status},
            </if>
            <if test="createBy != null">#{createBy},
            </if>
            <if test="createTime != null">#{createTime},
            </if>
            <if test="auditTime != null">#{auditTime},
            </if>
            <if test="updateBy != null">#{updateBy},
            </if>
            <if test="updateTime != null">#{updateTime},
            </if>
            <if test="auditBy != null">#{auditBy},
            </if>
        </trim>
    </insert>

    <update id="updateStockAdjustInfo" parameterType="StockAdjustInfo">
        update sk_stock_adjust_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="adjustNumber != null">adjust_number =
                #{adjustNumber},
            </if>
            <if test="stockCode != null">stock_code =
                #{stockCode},
            </if>
            <if test="stockName != null">stock_name =
                #{stockName},
            </if>
            <if test="adjustType != null">adjust_type =
                #{adjustType},
            </if>
            <if test="remark != null">remark =
                #{remark},
            </if>
            <if test="status != null">status =
                #{status},
            </if>
            <if test="createBy != null">create_by =
                #{createBy},
            </if>
            <if test="createTime != null">create_time =
                #{createTime},
            </if>
            <if test="auditTime != null">audit_time =
                #{auditTime},
            </if>
            <if test="updateBy != null">update_by =
                #{updateBy},
            </if>
            <if test="updateTime != null">update_time =
                #{updateTime},
            </if>
            <if test="auditBy != null">audit_by =
                #{auditBy},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteStockAdjustInfoById" parameterType="Long">
        update sk_stock_adjust_info
        set status ='3'
        where id = #{id}
    </delete>

    <delete id="deleteStockAdjustInfoByIds" parameterType="String">
        update sk_stock_adjust_info
        set status ='3'
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>